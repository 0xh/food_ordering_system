<div class="container">

  <div class="panel panel-default">
    <div class="panel-heading"><h3 class="panel-title">My Orders</h3></div>
    <div class="panel-body">
      <table id="orders" class="table">
        <thead>
        <tr>
          <th></th>
          <th width="180">Created</th>
          <th width="15%">Customer</th>
          <th>Description</th>
          <th width="5%">Total Quantity</th>
          <th width="10%">Total Price</th>
          <th width="100">Status</th>
          <th width="180">Actions</th>
        </tr>
        </thead>
        <tbody>

        {{# each orders }}
        <tr>
          <td></td>
          <td>{{this.date}}<br/>
              {{this.time}}
          </td>
          <td>
            <strong>{{this.name}}</strong><br/>
            {{this.address}}<br/>
            {{this.paymentId}}
          </td>

          <td>
          {{# each this.items }}
          <strong>{{ this.item.title }}</strong> : {{ this.qty }} x <span class="badge"> ₹ {{ this.price }}</span> <br/>
          {{/each}}
          </td>

          <td>{{this.cart.totalQty}}</td>

          <td> ₹ {{this.cart.totalPrice}}</td>

          <td>
          <span class-"badge">{{this.status}}</span>
          <!--<span class="label label-<% if(order.processed) { %>success<% } else { %>default<% } %>">{{this.status}}-->
          </span>
          </td>

          <td>
            <button class="delete btn btn-danger " id="<%= order.id %>"><span class="glyphicon glyphicon-trash" /></button>
            <button class="view btn btn-default " id="<%= order.id %>"><span class="glyphicon glyphicon-eye-open" /></button>
            <button class="process btn btn-<% if(order.processed) { %>default disabled<% } else { %>success<% } %>" id="<%= order.id %>"><span class="glyphicon glyphicon-export" /></button>
          </td>
        </tr>

        {{/each}}

        </tbody>
      </table>
    </div>
  </div>

</div>

<script src="/javascripts/orders.js"></script>

